{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "build",
		"rootDir": "src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
	},
	"exclude": [
		"build",
		"node_modules",
	],
	"include": ["src/**/*"]
}
