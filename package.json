{
  "name": "@bveiga/react-components",
  "author": "Bruno Veiga <bruno.veiga@veigastudios.com> (https://realbrunoveiga.com)",
  "description": "This is a library of reusable Functional React components written in TypeScript.",
  "license": "MIT",
  "version": "1.1.2",
  "homepage": "https://github.com/bveiga/react-components",
  "dependencies": {
    "@types/classnames": "2.2.6",
    "bootstrap": "^4.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "sass": "^1.51.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.5",
		"@types/jest": "^28.1.6",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.1.5",
    "jest": "^28.1.3",
		"jest-environment-jsdom": "^28.1.3",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "jest": {
		"moduleNameMapper": {
			"\\.(css|less|sass|scss)$": "<rootDir>/mocks/mockStyle.ts",
			"\\.(jpg|jpeg|png|gif|webp|svg|eot|otf|ttf)$": "<rootDir>/mocks/mockFile.ts"
		},
		"testEnvironment": "jsdom",
		"transform": {
			"^.+\\.(ts|tsx|js|jsx)$": "ts-jest"
		}
	},
  "scripts": {
    "build": "sass --watch src/components.scss:build/compiled.css --style compressed --no-source-map",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bveiga/react-components.git"
  },
  "bugs": {
    "url": "https://github.com/bveiga/react-components/issues"
  }
}
